package numericData;

public class rectangularComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//write a program called RectangleComputation to print the area and perimeter of a rectangle, given its length and width (in doubles). 
		//You should use 4 double variables called length, width, area and perimeter.
		
		double length, width, area, perimeter;
		length = 5.12 ;
		width = 2.12;
		
		area = length * width;
		perimeter = length + length + width + width;
		
		System.out.printf("Length of Rectangular =  %.2fcm",length);
		System.out.printf("\nWidth of Rectangular = %.2fcm", width);
		System.out.printf("\n\nArea of Rectangular is %.2fcm",area);
		System.out.printf("\nPerimeter of Rectangular is %.2fcm",perimeter);
	}

}


package numericData;

public class clyinderComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// Declare 3 double variables to hold radius, area and circumference.
		// A "double" holds floating-point number with an optional fractional part.
		double radius, height, surfaceArea, baseArea, volume;
		// Declare a double to hold PI.
		// Declare as "final" to specify that its value cannot be changed (i.e. constant).
		final double PI = 3.14159265;
		
		radius = 1.2;
		height = 2.12;
		
		surfaceArea = (2*PI*radius)*(height+radius);
		baseArea = radius*radius*PI;
		volume = radius*radius*height*PI;
		
		System.out.printf("The total surface area is %.2f",surfaceArea);
		System.out.printf("\nThe base area is %.2f",baseArea);
		System.out.printf("\nThe volume is %.2f",volume);
		
		
	}

}

